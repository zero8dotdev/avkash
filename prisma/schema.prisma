generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model Organisation {
  orgId                     String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                      String        @db.VarChar(255)
  dateformat                String        @default("DD-MM-YYYY") @db.VarChar(255)
  timeformat                String        @default("HH:MM") @db.VarChar(255)
  location                  String?       @db.VarChar(255)
  visibility                Visibility    @default(SELF)
  startOfWorkWeek           DaysOfWeek    @default(MONDAY)
  workweek                  DaysOfWeek[]  @default([MONDAY, TUESDAY, WEDNESDAY, THURSDAY, FRIDAY, SATURDAY, SUNDAY])
  timeZone                  String?       @db.VarChar(255)
  notificationLeaveChanged  Boolean       @default(false)
  notificationDailySummary  Boolean       @default(false)
  notificationWeeklySummary Boolean       @default(false)
  notificationToWhom        Role          @default(MANAGER)
  ownerId                   String?       @db.Uuid
  createdOn                 DateTime?     @default(now()) @db.Timestamp(6)
  createdBy                 String?       @db.VarChar(255)
  updatedBy                 String?       @db.VarChar(255)
  updatedOn                 DateTime?     @updatedAt @db.Timestamp(6)
  halfDayLeave              Boolean       @default(false)
  holidays                  Holiday[]
  leavePolicies             LeavePolicy[]
  leaveTypes                LeaveType[]
  teams                     Team[]

  @@schema("public")
}

model Team {
  teamId    String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String       @db.VarChar(255)
  orgId     String       @db.Uuid
  isActive  Boolean      @default(true)
  manager   String?      @db.Uuid
  createdOn DateTime?    @default(now()) @db.Timestamp(6)
  createdBy String?      @db.VarChar(255)
  updatedBy String?      @db.VarChar(255)
  updatedOn DateTime?    @updatedAt @db.Timestamp(6)
  org       Organisation @relation(fields: [orgId], references: [orgId])
  users     User[]

  @@schema("public")
}

model User {
  userId       String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String    @db.VarChar(255)
  email        String    @unique @db.VarChar(255)
  teamId       String?   @db.Uuid
  isManager    Boolean   @default(false)
  createdOn    DateTime? @default(now()) @db.Timestamp(6)
  createdBy    String?   @db.VarChar(255)
  updatedBy    String?   @db.VarChar(255)
  updatedOn    DateTime? @updatedAt @db.Timestamp(6)
  accruedLeave Int       @default(0)
  usedLeave    Int       @default(0)
  keyword      String?   @db.VarChar
  leaves       Leave[]
  team         Team?     @relation(fields: [teamId], references: [teamId], onDelete: Restrict)

  @@schema("public")
}

model Leave {
  leaveId    String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  leaveType  String        @db.VarChar(255)
  startDate  DateTime      @db.Timestamp(6)
  endDate    DateTime      @db.Timestamp(6)
  duration   LeaveDuration
  shift      Shift
  isApproved LeaveStatus   @default(PENDING)
  userId     String        @db.Uuid
  teamId     String        @db.Uuid
  reason     String        @db.VarChar(255)
  createdOn  DateTime?     @default(now()) @db.Timestamp(6)
  createdBy  String?       @db.VarChar(255)
  updatedBy  String?       @db.VarChar(255)
  updatedOn  DateTime?     @updatedAt @db.Timestamp(6)
  user       User          @relation(fields: [userId], references: [userId])

  @@schema("public")
}

model LeavePolicy {
  leavePolicyId    String                   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  leaveTypeId      String                   @db.Uuid
  unlimited        Boolean                  @default(false)
  maxLeaves        Int
  accruals         Boolean                  @default(false)
  accrualFrequency AccuralFrequencyOptions?
  accrueOn         AccrueOnOptions?
  rollOver         Boolean                  @default(false)
  rollOverLimit    Int?
  orgId            String                   @db.Uuid
  rollOverExpiry   DateTime?                @db.Timestamp(6)
  autoApprove      Boolean                  @default(false)
  isActive         Boolean                  @default(true)
  createdOn        DateTime?                @default(now()) @db.Timestamp(6)
  createdBy        String?                  @db.VarChar(255)
  updatedBy        String?                  @db.VarChar(255)
  updatedOn        DateTime?                @updatedAt @db.Timestamp(6)
  org              Organisation             @relation(fields: [orgId], references: [orgId])

  @@schema("public")
}

model LeaveType {
  leaveTypeId    String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String       @db.VarChar(255)
  color          String?      @db.VarChar(6)
  isActive       Boolean      @default(true)
  orgId          String       @db.Uuid
  setSlackStatus Boolean      @default(true)
  emoji          String?
  statusMsg      String?      @db.VarChar(255)
  createdOn      DateTime?    @default(now()) @db.Timestamp(6)
  createdBy      String?      @db.VarChar(255)
  updatedBy      String?      @db.VarChar(255)
  updatedOn      DateTime?    @updatedAt @db.Timestamp(6)
  org            Organisation @relation(fields: [orgId], references: [orgId])

  @@schema("public")
}

model Holiday {
  holidayId   String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String       @db.VarChar(255)
  date        DateTime     @db.Timestamp(6)
  isRecurring Boolean      @default(true)
  isCustom    Boolean      @default(true)
  orgId       String       @db.Uuid
  createdOn   DateTime?    @default(now()) @db.Timestamp(6)
  createdBy   String?      @db.VarChar(255)
  updatedBy   String?      @db.VarChar(255)
  updatedOn   DateTime?    @updatedAt @db.Timestamp(6)
  org         Organisation @relation(fields: [orgId], references: [orgId])

  @@schema("public")
}

model OrgActivityLog {
  id             Int      @id @default(autoincrement())
  orgId          String?  @db.Uuid
  changedColumns String[]
  oldValues      Json?
  newValues      Json?
  changedOn      DateTime @default(now()) @db.Timestamp(6)
  changedBy      String?  @db.VarChar(255)
  tableName      String?
  teamId         String?  @db.Uuid
  userId         String?  @db.Uuid
  keyword        String?

  @@schema("public")
}

enum LeaveDuration {
  FULL_DAY
  HALF_DAY

  @@schema("public")
}

enum Shift {
  MORNING
  AFTERNOON
  NONE

  @@schema("public")
}

enum Visibility {
  ORG
  TEAM
  SELF

  @@schema("public")
}

enum DaysOfWeek {
  SUNDAY
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY

  @@schema("public")
}

enum AccuralFrequencyOptions {
  BIWEEKLY
  WEEKLY
  MONTHLY
  QUARTERLY
  HALF_YEARLY

  @@schema("public")
}

enum AccrueOnOptions {
  BEGINNING
  END

  @@schema("public")
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED

  @@schema("public")
}

enum Role {
  OWNER
  MANAGER
  USER

  @@schema("public")
}
